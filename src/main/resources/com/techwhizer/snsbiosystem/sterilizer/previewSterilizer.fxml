<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.techwhizer.snsbiosystem.sterilizer.controller.PreviewSterilizers">
   <bottom>
      <VBox prefHeight="90.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox fx:id="paginationContainer" disable="true">
               <children>
                  <Pagination fx:id="pagination" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox style="-fx-border-color: grey;">
               <children>
                  <HBox spacing="20.0">
                     <children>
                        <HBox alignment="CENTER" fillHeight="false">
                           <children>
                              <Label minWidth="117.0" prefWidth="117.0" text="TOTAL RECORD :">
                                 <font>
                                    <Font name="Arial Bold" size="13.0" />
                                 </font>
                              </Label>
                              <Label fx:id="totalRecordL" minWidth="20.0" textFill="#030ffc">
                                 <font>
                                    <Font name="Arial Black" size="13.0" />
                                 </font>
                              </Label>
                           </children>
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </HBox>
                        <Separator orientation="VERTICAL" />
                        <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0">
                           <children>
                              <Label minWidth="157.0" prefHeight="16.0" prefWidth="157.0" text="TOTAL VALID RECORD :">
                                 <font>
                                    <Font name="Arial Bold" size="13.0" />
                                 </font>
                              </Label>
                              <Label fx:id="totalValidRecordL" minWidth="20.0" textFill="#033838">
                                 <font>
                                    <Font name="Arial Bold" size="13.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <Separator orientation="VERTICAL" />
                        <HBox alignment="CENTER" layoutX="168.0" layoutY="10.0">
                           <children>
                              <Label minWidth="171.0" prefHeight="16.0" prefWidth="171.0" text="TOTAL INVALID RECORD :">
                                 <font>
                                    <Font name="Arial Bold" size="13.0" />
                                 </font>
                              </Label>
                              <Label fx:id="totalInvalidRecordL" minWidth="20.0" textFill="#fc0000">
                                 <font>
                                    <Font name="Arial Bold" size="13.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <Separator layoutX="392.0" layoutY="10.0" orientation="VERTICAL" prefHeight="200.0" />
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" />
                     </HBox.margin>
                  </HBox>
                  <HBox alignment="CENTER" fillHeight="false" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER" spacing="50.0">
                           <children>
                              <Label graphicTextGap="10.0" onMouseClicked="#cancelBnClick" prefHeight="26.0" prefWidth="139.0" styleClass="previewCancelButton" text="CANCEL" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                                 <graphic>
                                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../img/icon/clear_ic.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Label>
                              <HBox alignment="CENTER">
                                 <children>
                                    <Label fx:id="uploadNowBn" graphicTextGap="10.0" onMouseClicked="#uploadBnClick" prefHeight="27.0" prefWidth="162.0" styleClass="previewsubmitButton" text="UPLOAD NOW" textFill="WHITE">
                                       <font>
                                          <Font name="System Bold" size="13.0" />
                                       </font>
                                       <graphic>
                                          <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                             <image>
                                                <Image url="@../img/icon/cloud_ic.png" />
                                             </image>
                                          </ImageView>
                                       </graphic>
                                    </Label>
                                    <ProgressIndicator fx:id="progressbar" minHeight="35.0" minWidth="35.0" prefHeight="35.0" prefWidth="35.0" />
                                 </children>
                              </HBox>
                           </children>
                           <HBox.margin>
                              <Insets top="5.0" />
                           </HBox.margin>
                        </HBox>
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" />
                     </HBox.margin>
                  </HBox>
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </bottom>
   <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="tableview" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="colClientId" maxWidth="75.0" minWidth="75.0" text="CLIENT ID" />
                       <TableColumn fx:id="colSterilizerId" maxWidth="160.0" minWidth="140.0" text="STERILIZER ID" />
                       <TableColumn fx:id="colSterilizerListNumber" maxWidth="180.0" minWidth="170.0" text="LIST NUMBER" />
                       <TableColumn fx:id="colSterilizerType" maxWidth="200.0" minWidth="180.0" text="STERILIZER TYPE" />
                       <TableColumn fx:id="colSterilizerBrand" maxWidth="200.0" minWidth="200.0" text="STERILIZER BRAND" />
                       <TableColumn fx:id="colSterilizerSerialNumber" maxWidth="230.0" minWidth="210.0" text="SERIAL NUMBER" />
                       <TableColumn fx:id="colStatus" minWidth="120.0" text="STATUS" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
